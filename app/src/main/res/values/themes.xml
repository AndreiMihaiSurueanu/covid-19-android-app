<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Covid19AndroidApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_theme</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RedColorButton"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/RedButtonThemeOverlay</item>
    </style>

    <style name="RedButtonThemeOverlay">
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="BlueColorButton"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/NewBlueButtonThemeOverlay</item>
    </style>

    <style name="NewBlueButtonThemeOverlay">
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="WhiteColorButton"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/WhiteButtonThemeOverlay</item>
    </style>

    <style name="WhiteButtonThemeOverlay">
        <item name="colorPrimary">@color/white</item>
    </style>

</resources>